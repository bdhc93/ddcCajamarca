                                <strong>Cumpleaños cercanos</strong>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </li>
                    @foreach (var item in ViewBag.result)
                    {
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-birthday-cake fa-fw"></i> @item.NombreApellidos 
                                    <span class="pull-right text-muted small">@item.FechaNacimientoMostrar</span>
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                    }
                    <li>
                        <div class="text-center link-block">
                            <a href="#">
                                <strong>Eventos cercanos</strong>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </li>
                    @foreach (var item in ViewBag.resulteventos)
                    {
                        <li>
                            <a href="#">
                                <div>
                                    <i class="fa fa-calendar fa-fw"></i> @item.NombreActividad - @item.Ambiente.Nombre
                                    <span class="pull-right text-muted small">@item.FechaInicio</span>
                                </div>
                            </a>
                        </li>
                        <li class="divider"></li>
                    }
