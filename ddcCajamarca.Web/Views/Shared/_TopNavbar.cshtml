            <li>
                <span class="m-r-sm text-muted welcome-message" data-i18n="topnav.welcometext">Bienvenido al sistema de administracion DDC 2.0</span>
            </li>
            
            <li class="dropdown">
                <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                    <i class="fa fa-bell"></i> 
                    @{
                        if (ViewBag.contnot > 0)
                        {
                            <span class="label label-warning">@ViewBag.contnot</span>
                        }
                    }
                </a>
                <ul class="dropdown-menu dropdown-alerts">
                    <li>
                        <div class="text-center link-block">
