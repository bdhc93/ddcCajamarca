
@{
    ViewBag.Title = "Agenda Cultural";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Agenda Cultural</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li>
                Agenda Cultural
            </li>
            <li class="active">
                <strong>Nuevo Registro</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2>
                    Formulario - Registrar Evento
                </h2>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form action="@Url.Action("NuevoRegistro", "AgendaCultural")" enctype="multipart/form-data" method="post">
                        <div class="form-group col-lg-12">
                            <div class="col-lg-9 b-r">
                                <div class="form-group col-lg-6">
                                    <label>Sala</label>
                                    <input name="NombreApellidos" readonly class="form-control" value="@ViewBag.Ambiente" style="text-transform:uppercase;" required>
                                    <input name="IdAmbiente" hidden value="@ViewBag.IdAmbiente">
                                    <input name="opcTodoDia" hidden value="@ViewBag.opcTodoDia">
                                    <input name="cbLunes" hidden value="@ViewBag.cbLunes">
                                    <input name="cbMartes" hidden value="@ViewBag.cbMartes">
                                    <input name="cbMiercoles" hidden value="@ViewBag.cbMiercoles">
                                    <input name="cbJueves" hidden value="@ViewBag.cbJueves">
                                    <input name="cbViernes" hidden value="@ViewBag.cbViernes">
                                    <input name="cbSabado" hidden value="@ViewBag.cbSabado">
                                    <input name="cbDomingo" hidden value="@ViewBag.cbDomingo">
                                </div>

                                <div class="form-group col-lg-6">
                                    <label>Fecha de Registro</label>
                                    <input name="FechaRegistro" type="text" class="form-control" readonly value="@ViewBag.FechaHoy" />
                                </div>

                                <div class="form-group col-lg-6">
                                    <label>Nombre de la Actividad - Agrupacion</label>
                                    <input name="NombreActividad" id="NombreActividad" data-provide="typeahead" data-source='@ViewBag.EventosAuto' autocomplete="off" placeholder="INGRESE NOMBRE" class="form-control" style="text-transform:uppercase;" required>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Institución/Persona Encargada</label>
                                    <input name="InstitucionEncargada" id="InstitucionEncargada" autocomplete="off" placeholder="INGRESE NOMBRE" class="form-control" data-provide="typeahead" data-source='@ViewBag.Personas' style="text-transform:uppercase;" required>
                                </div>

                                <div class="form-group col-lg-12" id="idrequerimiento">
                                    <div class="col-lg-12">
                                        <label>Requerimientos</label>
                                    </div>

                                    <div class="form-group col-lg-6">
                                        <p>Disponibles</p>
                                        <ul class="sortable-list connectList agile-list" id="todo">

                                            @{
                                                var x = 0;
                                                foreach (var item in @ViewBag.Activos)
                                                {
                                                    <li class="success-element" id="@item.Id">
                                                        @item.Nombre
                                                        <input name="DetalleRequerimientos[@x].Cantidad" value="@item.Cantidad" class="pull-right numval" max="@item.Cantidad" type="number" min="1" style="width:50px; text-align:center;" />
                                                        <input name="DetalleRequerimientos[@x].IdActivo" hidden value="@item.Id" />
                                                    </li>
                                                    x++;
                                                }

                                            }
                                        </ul>
                                    </div>
                                    <div class="form-group col-lg-6">
                                        <p>Agregados</p>
                                        <ul class="sortable-list connectList agile-list" id="enprogreso"></ul>
                                    </div>
                                </div>

                                <div class="form-group col-lg-12">
                                    <label>Información adicional</label>
                                    <textarea name="info" class="form-control" rows="5" maxlength="500" style="text-transform:uppercase;"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-3" id="paso2">
                                <div class="form-group col-lg-12">
                                    <label>Fecha Inicio</label>
                                    <div class="input-group">
                                        <input name="FechaInicio" type="text" readonly class="form-control" value="@ViewBag.FechaInicio"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Fecha Fin</label>
                                    <div class="input-group">
                                        <input name="FechaFin" type="text" readonly class="form-control" value="@ViewBag.FechaFin"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Hora Incio</label>
                                    <div class="input-group clockpicker" data-autoclose="true">
                                        <input type="text" class="form-control" name="HoraIni" readonly value="@ViewBag.HoraInicio">
                                        <span class="input-group-addon">
                                            <span class="fa fa-clock-o"></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Hora Fin</label>
                                    <div class="input-group clockpicker" data-autoclose="true">
                                        <input type="text" class="form-control" name="HoraFin" readonly value="@ViewBag.HoraFin">
                                        <span class="input-group-addon">
                                            <span class="fa fa-clock-o"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <input id="Eventotipo" name="Eventotipo" hidden value="@ViewBag.Evento" />


                            <div class="form-group col-lg-12">
                                <input hidden type="text" name="arryreq" id="arryreq" value="" />
                                <div class="text-right">
                                    <button class="btn btn-sm btn-success m-t-n-xs" type="submit"><strong>Guardar</strong></button>
                                </div>
                            </div>


                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
