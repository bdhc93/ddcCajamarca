                color: coloreventos[index],
                description: descripcioneventos[index],
                data: function () { 
                    return {
                        eventoId: idEventos[index],
                    };
                }
            };
            $('#calendar').fullCalendar('renderEvent', myevento, true);
        });

        });
        

    </script>
}
