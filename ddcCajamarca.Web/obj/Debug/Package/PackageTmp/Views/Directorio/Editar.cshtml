
@{
    ViewBag.Title = "Directorio";
    @model ddcCajamarca.Models.Persona
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Nuevo Registro</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Inicio</a>
            </li>
            <li>
                Directorio
            </li>
            <li class="active">
                <strong>Modificar Registro</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2>
                    Formulario - Modificar Persona
                </h2>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form action="@Url.Action("Editar", "Directorio")" enctype="multipart/form-data" method="post">
                        @{
                            IEnumerable<SelectListItem> Organizacion = new SelectList(@ViewBag.Organizacion, "Id", "Nombre");
                            IEnumerable<SelectListItem> Ocupacion = new SelectList(@ViewBag.Ocupacion, "Id", "Nombre");
                            IEnumerable<SelectListItem> Profesion = new SelectList(@ViewBag.Profesion, "Id", "Nombre");
                        }
                        <div class="col-sm-8 b-r">
                            <div class="form-group col-lg-6">
                                <label>Nombre y Apellidos (*)</label>
                                <input name="NombreApellidos" placeholder="INGRESE NOMBRE" class="form-control" data-provide="typeahead" data-source='@ViewBag.Personas' style="text-transform:uppercase;" required value="@Model.NombreApellidos">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Nombre Artistico</label>
                                <input name="NombreArtistico" placeholder="INGRESE NOMBRE ARTISTICO" class="form-control" style="text-transform:uppercase;" value="@Model.NombreArtistico">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Ocupación Cultural (*)</label>
                                <div class="input-group" id="ocupacionnew">
                                    @Html.DropDownList("IdOcupacionCultural", Ocupacion, "-- Seleccionar --", new { @class = "form-control" })
                                    <span onclick="abrirmodalOcupacion()" class="input-group-addon btn btn-primary btn-xs"><a href="#"><i style="color:darkslategrey" class="fa fa-plus"></i></a></span>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Teléfono/Celular (*)</label>
                                <input name="Telefono" placeholder="INGRESE TELÉFONO O CELULAR" class="form-control" style="text-transform:uppercase;" required value="@Model.Telefono">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Dirección</label>
                                <input name="Direccion" placeholder="INGRESE DIRECCIÓN" class="form-control" style="text-transform:uppercase;" value="@Model.Direccion">
                            </div>
                            <div class="form-group col-lg-6" id="data_3">
                                <label>Fecha Nacimiento</label>
                                <div class="input-group date">
                                    <input name="FechaNacimiento" type="text" class="form-control" value="@Model.FechaNacimiento" max="@ViewBag.FechaHoy" placeholder="SELECCIONE FECHA"><span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Email</label>
                                <input name="Email" placeholder="INGRESE CORREO ELECTRONICO" class="form-control" style="text-transform:uppercase;" type="email" value="@Model.Email">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Redes Sociales</label>
                                <input name="RedesSociales" placeholder="INGRESE LA DIRECCION DE UNA RED SOCIAL" class="form-control" style="text-transform:uppercase;" value="@Model.RedesSociales">
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Organizacion</label>
                                <div class="input-group date" id="organizacionnew">
                                    @Html.DropDownList("IdOrganizacion", Organizacion, "-- Seleccionar --", new { @class = "form-control" })
                                    <span onclick="abrirmodalOrganizacion()" class="input-group-addon btn btn-primary btn-xs"><a href="#"><i style="color:darkslategrey" class="fa fa-plus"></i></a></span>
                                </div>
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Profesión</label>
                                <div class="input-group date" id="profesionnew">
                                    @Html.DropDownList("IdProfesion", Profesion, "-- Seleccionar --", new { @class = "form-control" })
                                    <span onclick="abrirmodalProfesion()" class="input-group-addon btn btn-primary btn-xs"><a href="#"><i style="color:darkslategrey" class="fa fa-plus"></i></a></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group col-lg-12">
                                <label>Fecha de Registro</label>
                                <input name="FechaRegistro" type='date' class="form-control" readonly value="@ViewBag.FechaHoy" />
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Imagen</label>
                                @*<input name="file" type="file" id="files" class="form-control" style="text-transform:uppercase;">*@
                                <label title="Upload image file" for="inputImage" class="form-control">
                                    <input type="file" accept="image/*" name="file" id="inputImage">
                                </label>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Vista Previa</label>
                                @*<output id="list">
                                    <img name="imgbase" style="height:125px;width:125px" class="img-circle m-t-xs img-responsive" src="@Model.Imagen.ToString()" title="', escape(theFile.name), '" />
                                </output>*@
                                <div class="image-crop" style="width:125px">
                                    <img src="@Model.Imagen.ToString()">
                                </div>
                            </div>
                            <div class="form-group col-lg-12">
                                *Los campos marcados con (*) son obligatorios.
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <input hidden type="text" name="cropweight" id="cropweight" value="" />
                            <input hidden type="text" name="cropwidth" id="cropwidth" value="" />
                            <input hidden type="text" name="cropx" id="cropx" value="" />
                            <input hidden type="text" name="cropy" id="cropy" value="" />
                            <div class="form-group col-lg-12 text-right">
                                <button class="btn btn-sm btn-primary m-t-n-xs" type="submit"><strong>Guardar</strong></button>
                            </div>
                        </div>
                        <input name="Id" value="@Model.Id" hidden>
                        <input name="Imagen" value="@Model.Imagen" hidden>
                        <input name="ImagenTemp" value="@Model.ImagenTemp" hidden>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


